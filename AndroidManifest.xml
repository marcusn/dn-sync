<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="tv.nilsson.dnsync"
      android:versionCode="1"
      android:versionName="1.0">
  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application android:label="dn-sync" android:icon="@drawable/icon" android:debuggable="true">

        <activity android:name=".MyActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
      <service android:name=".SyncService" android:label="sync-service" >
        <intent-filter>
            <action android:name="tv.nilsson.dnsync.SYNC"/>
        </intent-filter>
        </service>
      <service android:name=".TimerService" android:label="timer-service">
        <intent-filter>
          <action android:name="tv.nilsson.dnsync.STARTTIMER"/>
        </intent-filter>
      </service>
      <receiver android:name=".DownloadCompleteReceiver" android:label="download-complete" >
        <intent-filter>
          <action android:name="android.intent.action.DOWNLOAD_COMPLETE"/>
        </intent-filter>
      </receiver>
    </application>
</manifest> 
